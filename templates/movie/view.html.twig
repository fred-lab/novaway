{% extends 'base.html.twig' %}

{% block title %}
    {{ movie.title }}
{% endblock %}

{% block header %}
    <div class="jumbotron">
        <div class="container">
            <nav class="breadcrumb">
                <a href="{{ path('admin_index') }}" class="breadcrumb-item">Index</a>
                <a href="{{ path('admin_movie_show', { 'movie': movie.id}) }}" class="breadcrumb-item active">{{ movie.title }}</a>
            </nav>
            <h1 class="display-3">{{ movie.title }}</h1>
            <p class="text-muted">{{ movie.resume }}</p>
            <p>{{ movie.director }}</p>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row text-center placeholder">
        <div class="col-md-6">
            <h2>Detail du DVD/Bluray :</h2>

            <div class="list-group">
                <p class="list-group-item">Titre : {{ movie.title }}</p>
                <p class="list-group-item">Auteur : {{ movie.director }}</p>
                <div class="list-group-item">
                    <p>Résumé :</p>
                    <p>{{ movie.resume }}</p>
                </div>
                <p class="list-group-item">Acteurs :
                    {% for actor in movie.actors %}
                        {{ actor }}
                    {% endfor %}
                </p>
                <p class="list-group-item">Date de sortie : {{ movie.releaseDate | date }}</p>
                <p class="list-group-item">Durée : {{ movie.duration }}</p>
                <p class="list-group-item">N° ISAN : {{ movie.isan }}</p>
                <p class="list-group-item">Prix : {{ movie.price }}</p>
            </div>
            <a href="{{ path('admin_index') }}" class="btn .btn-lg btn-outline-primary">Retour à l'accueil</a>
            <a href="{{ path('admin_movie_edit', {'movie' : movie.id}) }}" class="btn .btn-lg btn-outline-success">Editer ce média</a>
            <a href="{{ path('admin_movie_delete', {'movie' : movie.id}) }}" class="btn .btn-lg btn-outline-danger">Supprimer ce média</a>
        </div>
    </div>
{% endblock %}